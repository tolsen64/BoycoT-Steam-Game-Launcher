<Window x:Class="BoycoT_Steam_Game_Launcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Steam Launcher" Height="600" Width="900"
        SizeToContent="Height"
        ResizeMode="CanResize">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <ItemsControl Name="GamesItemsControl" ItemsSource="{Binding Games}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel IsItemsHost="True" Orientation="Horizontal" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border BorderThickness="1" BorderBrush="Gray" Margin="5" CornerRadius="5">
                        <Button
                            Width="155"
                            Padding="0"
                            Background="Transparent"
                            BorderThickness="0"
                            Click="GameIcon_Click"
                            DataContext="{Binding}">
                            <StackPanel>
                                <Image
                                    Source="{Binding IconPath}"
                                    Width="150"
                                    Height="75"/>
                                <TextBlock
                                    Text="{Binding Name}"
                                    TextAlignment="Center"
                                    TextWrapping="Wrap"/>
                            </StackPanel>
                        </Button>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </ScrollViewer>
   
</Window>