<Window x:Class="BoycoT_Steam_Game_Launcher.WebViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        Title="Steam" Height="600" Width="900">

    <DockPanel>
        <!-- Toolbar at the top -->
        <ToolBar DockPanel.Dock="Top">
            <Button Content="Done" Click="DoneButton_Click" Width="75"/>
        </ToolBar>

        <!-- WebView2 fills the remaining space -->
        <wv2:WebView2 x:Name="WebView2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
    </DockPanel>
</Window>
